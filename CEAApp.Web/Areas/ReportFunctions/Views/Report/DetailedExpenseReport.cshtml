@model CEAApp.Web.ViewModels.DetailedExpensesReportVM
@using CEAApp.Web.DIServices
@inject IConverterService ConverterService;
@inject IConfiguration Configuration;

@{
    ViewData["Title"] = "Detailed Expense Report";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string userName = ConverterService.ConvertObjectToString(TempData.Peek("UserID"));
    var FormCode = ViewBag.FormCode;
}

<div class="formWrapper container-fluid">
    <form asp-area="ReportFunctions" asp-controller="Report" asp-action="Index" method="get">

        @*  <div class="alert alert-danger alert-dismissible fade show errorPanel" style='display: @(!string.IsNullOrWhiteSpace(Model.ErrorMessage) ? "block" : "none")'>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Error! </strong>&nbsp;<span class="errorText">@Model.ErrorMessage</span>
        </div>
        <div class="alert alert-success alert-dismissible fade show successPanel" style='display: @(!string.IsNullOrWhiteSpace(Model.NotificationMessage) ? "block" : "none")'>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Success!</strong>&nbsp;<span class="successText">@Model.NotificationMessage</span>
        </div>*@

        <div class="container-fluid p-0 m-0">
            <div class="row no-gutters">
                <div class="col-12 mt-2">
                    <div class="formHeader">
                        <span><i class="fas fa-print fa-1x fa-fw"></i></span>
                        @ViewData["Title"]
                    </div>
                </div>
            </div>

            <div class="requestHeader">
                <div class="form-row">
                    <div class="col-12 mx-auto px-5">
                        <div class="alert alert-danger alert-dismissible fade show errorMsgBox" hidden>
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Error! </strong>&nbsp;<span class="errorMsg">Test error!</span>
                        </div>
                        <div class="alert alert-success alert-dismissible fade show successMsgBox" hidden>
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Success!</strong>&nbsp;<span class="successMsg">Test success!</span>
                        </div>
                    </div>
                </div>

                <div class="container-fluid ps-2 pe-0 me-0 pt-3 pb-2">
                    @*<div class="row pt-0 mt-0 pe-4">
                    <div class="col-sm-12 text-danger clearfix">
                    <span class="font-italic float-end">- indicates a required field</span>
                    <span class="float-end me-1"><i class="fas fa-asterisk fa-fw fa-xs"></i></span>
                    </div>
                    </div>*@

                    <div class="row pt-2">
                        <div class="col-sm-2 fieldLabel">
                            <label class="col-form-label">Cost Center</label>
                        </div>
                        <div class="col-sm-4">
                            @* <select id="cboFiscalYear" class="form-select fieldValue w-50"
                            title="Tips:" data-toggle="popover" data-content="Select Fiscal Year" data-trigger="hover" data-placement="top"
                            asp-for="FiscalYear" asp-items="Model.FiscalYearArray" name="fiscalYear" style="padding-left: -5px;">
                            <option value=""> </option>
                            </select>  *@
                            @Html.DropDownListFor(Model => Model.DetailedExpensesReport.CostCenter,@Model.costCenterList,"All", new { @class = "form-control form-select" , @Id="CostCenterId"})
                        </div>
                        <div class="col-sm-2 fieldLabel">
                            <label class="col-form-label">Project Status</label>
                        </div>
                        <div class="col-sm-3 pe-4">
                            @Html.DropDownListFor(Model => Model.DetailedExpensesReport.ProjectStatus, new List<SelectListItem>
                            {
                            new SelectListItem{ Text="All", Value = "0" },
                            new SelectListItem{ Text="Active", Value = "Active" },
                            new SelectListItem{ Text="Closed", Value = "Closed" },
                            }, new { @class = "form-control form-select", @Id="projectStatusId" })
                        </div>
                        <div class="col-sm-1"></div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-sm-2 fieldLabel">
                            <label class="col-form-label">Expenditure Type </label>
                        </div>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(Model => Model.DetailedExpensesReport.ExpenditureType,@Model.ExpenseTypeList, "All",new { @class = "form-control form-select", @Id="ExpenditureTypeId" })
                        </div>
                        <div class="col-sm-2 fieldLabel">
                            <label class="col-form-label">Requisition Status </label>
                        </div>
                        <div class="col-sm-3 pe-4">
                            @Html.DropDownListFor(Model => Model.DetailedExpensesReport.RequisitionStatus, new List<SelectListItem>
                            {
                            new SelectListItem{ Text="All", Value = "0" },
                            new SelectListItem{ Text="Closed", Value = "11" },
                            new SelectListItem{ Text="Outstanding", Value = "15" , Selected=true},
                            }, new { @class = "form-control form-select", @Id="RequisitionStatus" })
                        </div>
                        <div class="col-sm-1"></div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-sm-2 fieldLabel">
                            <label class="col-form-label">Fiscal Year</label>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group input-group-sm mt-1">
                                <div class="input-group-prepend">
                                    <span class="input-group-text inputGroupTitle" style="height: 31px;">
                                        <i class="far fa-calendar-alt fa-xs fa-fw"></i>
                                        From                                        
                                    </span>
                                </div>
                                 @Html.DropDownListFor(Model => Model.DetailedExpensesReport.FiscalYear,@Model.FiscalYearList, "All",new { @class = "borderLess fieldValue form-control-sm", @Id="FormFiscalYearId", @style="width: 120px; text-align: center;" })
                                
                                <div class="input-group-prepend ml-2 ps-4">
                                    <span class="input-group-text inputGroupTitle" style="height: 31px;">
                                        <i class="far fa-calendar-alt fa-xs fa-fw"></i>
                                        To                                        
                                    </span>
                                </div>
                               @Html.DropDownListFor(Model => Model.DetailedExpensesReport.FiscalYear,@Model.FiscalYearList, "All",new { @class = "borderLess fieldValue form-control-sm", @Id="ToFiscalYearId", @style="width: 120px; text-align: center;"})
                                
                            </div>
                        </div>
                        <div class="col-sm-2 fieldLabel">
                        </div>
                        <div class="col-sm-3 pe-4">
                        </div>
                        <div class="col-sm-1"></div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <button type="button" id="btnSearch" class="btn btn-sm btn-success float-sm-start text-white border-0 actionButton"
                                    style="width: 130px;" tabindex="18"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="Search for database records">
                                <span class="spinner-border spinner-border-sm spinicon" hidden></span>
                                <span class="normalicon"><i class="fas fa-search fa-fw fa-lg"></i></span>&nbsp;
                                Search
                            </button>
                            <button id="btnReset" type="reset" class="btn btn-sm btn-warning text-white border-0 actionButton" onclick="ResetButtonClick()"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="Clears the form" style="width: 130px;" tabindex="12">
                                <span><i class="fas fa-sync fa-fw fa-lg"></i></span>&nbsp;
                                Reset
                            </button>
                        </div>
                    </div>

                    <div class="row mt-2 mb-1 groupTitle">
                        <div class="col-sm-12 clearfix">
                            <span class="ps-3">Search Results:</span> &nbsp;
                            <span class="float-sm-end">

                            </span>
                        </div>
                    </div>

                    <div class="row mt-0 pt-0 mx-2 mb-2">
                        <div class="col-sm-12 ps-2 pe-3">
                            <div class="container-fluid tablePanel gridWrapper">
                                <div class="table-responsive py-3" style="-ms-overflow-style: auto;">

                                    <table id="detailedExpenseTable" class="generalTable display nowrap stripe row-border  table-bordered" style="width: 100%;">
                                        <thead>

                                            <tr>
                                                <th colspan="7" style="width:950px;text-align:center">
                                                    @Html.DisplayName("Project")
                                                </th>
                                                <th colspan="4" style="width: 700px;text-align:center">
                                                    @Html.DisplayName("Requisition")
                                                </th>
                                                <th colspan="2" style="width: 250px;text-align:center">
                                                    @Html.DisplayName("Purchase Order")
                                                </th>
                                                <th colspan="5" style="width: 460px;text-align:center">
                                                    @Html.DisplayName("Voucher")
                                                </th>
                                                <th colspan="4" style="width: 600px;text-align:center">
                                                    @Html.DisplayName("Payment")
                                                </th>
                                            </tr>

                                            <tr>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.ProjectNo)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.CostCenter)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.FiscalYear)
                                                </th>
                                                <th style="width: 400px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.ProjectDescription)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.ExpenditureType)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.ProjectBudget)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.ProjectStatus)
                                                </th>

                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.RequisitionNo)
                                                </th>
                                                <th style="width: 250px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.RequisitionDescription)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.RequisitionBudget)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.RequisitionStatus)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PurchaseOrderNo)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PurchaseOrderLineNo)
                                                </th>
                                                <th style="width: 80px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.VoucherNo)
                                                </th>
                                                <th style="width: 80px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.VoucherType)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.VoucherPaidAmount)
                                                </th>
                                                <th style="width: 80px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.VoucherItemNo)
                                                </th>                                                
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.VoucherCurrency)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PaymentNo)
                                                </th>
                                                <th style="width: 100px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PaymentDate)
                                                </th>

                                                <th style="width: 80px;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PaymentDocumentType)
                                                </th>
                                                <th style="width: 180px; text-align:right;">
                                                    @Html.DisplayNameFor(model => model.DetailedExpensesReport.PaymentActualPaidAmount)
                                                </th>

                                            </tr>
                                        </thead>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>

        </div>

        <div>
            <input type="hidden" id="hidUserName" value="@userName" name="UserName" />
            <input type="hidden" id="hidFormCode" asp-for="FormCode" />
            <input type="hidden" id="hidCallerForm" asp-for="@Model.CallerForm" name="callerForm" />
        </div>

    </form>
</div>

@section Styles{
    <style type="text/css">
        .ui-tooltip-content::after, .ui-tooltip-content::before {
            content: "";
            position: absolute;
            border-style: solid;
            display: block;
            left: 90px;
        }

        .ui-tooltip-content::before {
            bottom: -10px;
            border-color: #AAA transparent;
            border-width: 10px 10px 0;
        }

        .ui-tooltip-content::after {
            bottom: -7px;
            border-color: white transparent;
            border-width: 10px 10px 0;
        }
    </style>
}

    @section Scripts{
    <script src="~/js/DetailedExpensesReport.js?v=@Configuration["AppSettings:JavaScriptFileVersion"]"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


